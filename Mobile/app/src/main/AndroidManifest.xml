<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:name=".PlayBrightApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PlayBright"
        tools:targetApi="31">
        
        <activity
            android:name=".ui.activity.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.PlayBright.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".ui.activity.LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.PlayBright.NoActionBar" />
        
        <activity
            android:name=".ui.activity.SignUpActivity"
            android:exported="false"
            android:theme="@style/Theme.PlayBright.NoActionBar" />
        
        <activity
            android:name=".ui.activity.MainActivity"
            android:exported="false" />
        
        <activity
            android:name=".ui.activity.StudentHomeActivity"
            android:exported="false"
            android:theme="@style/Theme.PlayBright.NoActionBar" />
        
        <activity
            android:name=".ui.activity.PictureQuizActivity"
            android:exported="false"
            android:theme="@style/Theme.PlayBright.NoActionBar"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.activity.AudioIdentificationActivity"
            android:exported="false"
            android:theme="@style/Theme.PlayBright.NoActionBar"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.activity.SequencingCardsActivity"
            android:exported="false"
            android:theme="@style/Theme.PlayBright.NoActionBar"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.activity.PictureLabelingActivity"
            android:exported="false"
            android:theme="@style/Theme.PlayBright.NoActionBar"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.activity.CategorySelectionActivity"
            android:exported="false"
            android:theme="@style/Theme.PlayBright.NoActionBar"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.activity.EmotionRecognitionActivity"
            android:exported="false"
            android:theme="@style/Theme.PlayBright.NoActionBar"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.activity.YesNoQuestionsActivity"
            android:exported="false"
            android:theme="@style/Theme.PlayBright.NoActionBar"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.activity.TapRepeatActivity"
            android:exported="false"
            android:theme="@style/Theme.PlayBright.NoActionBar"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.activity.MatchingPairsActivity"
            android:exported="false"
            android:theme="@style/Theme.PlayBright.NoActionBar"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.activity.WordBuilderActivity"
            android:exported="false"
            android:theme="@style/Theme.PlayBright.NoActionBar"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activity.TraceAndFollowActivity"
            android:exported="false"
            android:theme="@style/Theme.PlayBright.NoActionBar"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.activity.ProfileActivity"
            android:exported="false"
            android:theme="@style/Theme.PlayBright.NoActionBar" />

        <activity
            android:name=".ui.activity.SettingsActivity"
            android:exported="false"
            android:theme="@style/Theme.PlayBright.NoActionBar" />

    </application>

</manifest>
