<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme for dark mode -->
    <style name="Base.Theme.PlayBright" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorOnPrimary">@color/text_on_primary</item>
        <item name="colorPrimaryContainer">@color/primary_light</item>
        <item name="colorOnPrimaryContainer">@color/text_primary</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/accent_orange</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryContainer">@color/accent_light</item>
        <item name="colorOnSecondaryContainer">@color/text_primary</item>
        
        <!-- Tertiary color -->
        <item name="colorTertiary">@color/gold</item>
        <item name="colorOnTertiary">@color/black</item>
        <item name="colorTertiaryContainer">@color/gold_light</item>
        <item name="colorOnTertiaryContainer">@color/text_primary</item>
        
        <!-- Error color -->
        <item name="colorError">@color/error_red</item>
        <item name="colorOnError">@color/white</item>
        <item name="colorErrorContainer">@color/error_red</item>
        <item name="colorOnErrorContainer">@color/white</item>
        
        <!-- Surface colors -->
        <item name="colorSurface">@color/surface_light</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorSurfaceVariant">@color/surface_variant</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary</item>
        
        <!-- Background -->
        <item name="android:colorBackground">@color/bg_light</item>
        <item name="colorOnBackground">@color/text_primary</item>
        
        <!-- Status bar -->
        <item name="android:statusBarColor">@color/surface_light</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <!-- Main theme -->
    <style name="Theme.PlayBright" parent="Base.Theme.PlayBright" />
    
    <!-- NoActionBar theme for activities -->
    <style name="Theme.PlayBright.NoActionBar" parent="Theme.PlayBright">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>
